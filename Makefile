# Python Logging with Loki + Grafana Stack
# Author: Generated by AI Assistant
# Description: Comprehensive logging setup for Python applications

DOCKER_IMAGE = python-logging-loki:latest
PROJECT_NAME = python-logging-loki

.PHONY: help build run up down logs test clean status grafana loki promtail dev

help: ## Show this help message
	@echo "ğŸš€ Python Logging with Loki + Grafana"
	@echo "======================================"
	@echo "Available commands:"
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "  âœ… \033[36m%-15s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)

build: ## Build Docker app images
	@echo "ğŸ”¨ Building Docker image $(DOCKER_IMAGE)"
	docker build \
	-f Dockerfile \
	--build-arg USER_UID=$$(id -u) \
	--build-arg USER_GID=$$(id -g) \
	-t $(DOCKER_IMAGE) .

run: ## Run Python app standalone (without stack)
	@echo "ğŸ Running Python app standalone"
	docker run --rm \
	--name python-logging-app \
	$(DOCKER_IMAGE)

up: ## Start the complete logging stack (app + loki + grafana)
	@echo "ğŸš€ Starting the complete logging stack"
	DOCKER_BUILT=1 docker-compose up -d --build
	@echo "âœ… Stack started successfully!"
	@echo "ğŸ“Š Grafana: http://localhost:3000"
	@echo "ğŸ—„ï¸  Loki API: http://localhost:3100"
	@echo "ğŸ“‹ Promtail: http://localhost:9080"

up-logs: ## Start stack and follow logs
	@echo "ğŸš€ Starting stack with live logs"
	docker-compose up --build

down: ## Stop and remove all containers
	@echo "ğŸ›‘ Stopping the logging stack"
	docker-compose down
	@echo "âœ… Stack stopped"

restart: ## Restart the entire stack
	@echo "ğŸ”„ Restarting the logging stack"
	$(MAKE) down
	$(MAKE) up

logs: ## Show logs from Python app
	@echo "ğŸ“‹ Following application logs"
	docker-compose logs -f app

logs-all: ## Show logs from all services
	@echo "ğŸ“‹ Following all service logs"
	docker-compose logs -f

test: ## Run logging tests locally
	@echo "ğŸ§ª Running logging tests"
	python3 test_logging.py

test-docker: ## Run tests inside Docker
	@echo "ğŸ§ª Running tests in Docker environment"
	docker run --rm -v $(PWD):/app -w /app python:3.12-slim bash -c "pip install structlog && python test_logging.py"

status: ## Check status of all services
	@echo "ğŸ“Š Service Status:"
	@docker-compose ps

health: ## Check health of all services
	@echo "ğŸ¥ Health Check:"
	@echo "Testing Grafana..."
	@curl -s http://localhost:3000/api/health || echo "âŒ Grafana not responding"
	@echo "Testing Loki..."
	@curl -s http://localhost:3100/ready || echo "âŒ Loki not responding"
	@echo "Testing Promtail..."
	@curl -s http://localhost:9080/ready || echo "âŒ Promtail not responding"

grafana: ## Open Grafana in browser
	@echo "ğŸŒ Opening Grafana dashboard"
	@open http://localhost:3000 || echo "Please open http://localhost:3000 manually"

loki: ## Query Loki API directly
	@echo "ğŸ—„ï¸  Querying Loki for recent logs"
	@curl -s "http://localhost:3100/loki/api/v1/query_range?query={job=\"python_app_logs\"}&limit=10" | jq '.data.result[0].values[-5:][]' || echo "Install jq for formatted output"

promtail: ## Check Promtail metrics
	@echo "ğŸ“‹ Promtail metrics"
	@curl -s http://localhost:9080/metrics | grep promtail || echo "âŒ Promtail metrics not available"

dev: ## Start development environment with hot reload
	@echo "ğŸ”§ Starting development environment"
	@echo "Note: Modify app/main.py for hot reload"
	docker-compose -f docker-compose.yml up --build

clean: ## Clean up Docker resources
	@echo "ğŸ§¹ Cleaning up Docker resources"
	docker-compose down -v
	docker system prune -f
	docker volume prune -f
	@echo "âœ… Cleanup completed"

backup-logs: ## Backup current logs
	@echo "ğŸ’¾ Backing up logs"
	@mkdir -p backups
	@tar -czf backups/logs_$(shell date +%Y%m%d_%H%M%S).tar.gz app/logs/ || echo "No logs to backup"

install-deps: ## Install local development dependencies
	@echo "ğŸ“¦ Installing dependencies"
	@command -v uv >/dev/null 2>&1 || pip install uv
	@uv sync

format: ## Format code with black
	@echo "ğŸ¨ Formatting code"
	@uv run black app/ *.py

lint: ## Lint code with ruff
	@echo "ğŸ” Linting code"
	@uv run ruff check app/ *.py

security: ## Security scan with bandit
	@echo "ğŸ”’ Running security scan"
	@uv run bandit -r app/

dashboard-export: ## Export current Grafana dashboard
	@echo "ğŸ“Š Exporting Grafana dashboard"
	@curl -s "http://localhost:3000/api/dashboards/uid/python-logging-loki" | jq '.dashboard' > dashboards/structlog-dashboard-backup.json || echo "Dashboard export failed"

quick-start: ## Quick start guide
	@echo "ğŸš€ Quick Start Guide"
	@echo "=================="
	@echo "1. Run: make up"
	@echo "2. Wait 30 seconds for services to start"
	@echo "3. Open: http://localhost:3000"
	@echo "4. View logs in Grafana dashboard"
	@echo "5. To stop: make down"

demo: ## Run demo with explanation
	@echo "ğŸ¬ Running demo..."
	$(MAKE) up
	@echo ""
	@echo "ğŸ¯ Demo is running! Here's what's happening:"
	@echo "   ğŸ“± Python app is generating realistic business logs"
	@echo "   ğŸ“‹ Promtail is collecting logs from Docker"
	@echo "   ğŸ—„ï¸  Loki is storing and indexing the logs"
	@echo "   ğŸ“Š Grafana is visualizing everything in real-time"
	@echo ""
	@echo "ğŸŒ Open your browser to: http://localhost:3000"
	@echo "â±ï¸  Give it 30 seconds to see data flowing"
	@echo ""
	@echo "ğŸ›‘ To stop demo: make down"
	
